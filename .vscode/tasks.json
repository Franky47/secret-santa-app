    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "Build",
            "args": ["run", "build"]
        },
        {
            "taskName": "Test",
            "args": ["run", "test"]
        },
        {
            "taskName": "Deploy",
            "args": ["run", "deploy"]
        }
    ]
}